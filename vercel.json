{
    "version": 2,
    "builds": [
        {
            "src": "/src/index.js",
            "use": "@vercel/node",
            "config": { 
                "includeFiles": ["src/**/*", "public/**/*"]
            
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/index.js"
        },
        {
            "src": "/src/(.*)",
            "dest": "/src/$1"
        },
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        }
    ]
}